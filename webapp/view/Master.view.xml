<mvc:View
	controllerName="com.timereporting.controller.Master"
	xmlns="sap.m"
	xmlns:semantic="sap.f.semantic"
	xmlns:mvc="sap.ui.core.mvc">

	<semantic:SemanticPage
		id="masterPage"
		preserveHeaderStateOnScroll="true"
		toggleHeaderOnTitleClick="false">
		<semantic:titleHeading>
			<Title
				id="masterPageTitle"
				text="{masterView>/title}"
				level="H2"/>
		</semantic:titleHeading>
		<semantic:content>
			<!-- For client side filtering add this to the items attribute: parameters: {operationMode: 'Client'}}" -->
			<List
				id="list"
				width="auto"
				class="sapFDynamicPageAlignContent"
				items="{
					path: '/ProjectSet',
					sorter: {
						path: 'ProjectID',
						descending: false
					},
					filters: [{
						path: 'ProjectStage',
      					operator: 'EQ',
            			value1: 'P003' 
					}],
					groupHeaderFactory: '.createGroupHeader',
					parameters: { expand : 'ProjectRoleSet' }}" 
				busyIndicatorDelay="{masterView>/delay}"
				noDataText="{masterView>/noDataText}"
				mode="{= ${device>/system/phone} ? 'None' : 'SingleSelectMaster'}"
				updateFinished=".onUpdateFinished"
				selectionChange=".onSelectionChange">
				<headerToolbar>
					<OverflowToolbar>
						<SearchField
							id="searchField"
							showRefreshButton="true"
							tooltip="{i18n>masterSearchTooltip}"
							search=".onSearch"
							width="auto">
							<layoutData>
								<OverflowToolbarLayoutData
									minWidth="150px"
									maxWidth="240px"
									shrinkable="true"
									priority="NeverOverflow"/>
							</layoutData>
						</SearchField>
						<ToolbarSpacer/>
					</OverflowToolbar>
				</headerToolbar>
				<items>
					<ObjectListItem
						type="Navigation"
						id="ObjectListItem"
						press=".onSelectionChange"
						title="{path: 'ProjectName'}"
						visible= "{path: 'ProjectRoleSet' , formatter:'.getProjectVisibility'}">
						<ObjectAttribute text="{ProjectID}" visible="false" />
					</ObjectListItem>
				</items>
			</List>
		</semantic:content>
	</semantic:SemanticPage>
</mvc:View>